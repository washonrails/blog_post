<div class="card bg-light mb-3">
  <div class="card-body">
    <h4><%= link_to post.title, post %></h4>

    <div class="text-muted mb-2">
      <em>Por <%= post.author %> (<%= l post.created_at, format: :short %>)</em>
    </div>

    <p> <%= post.body.truncate 200 %> </p>

    <p class="text-muted"> <%= pluralize post.comments.count, 'Comentario' %> </p>

    <%= link_to "Ver mais", post, class: 'btn btn-info' %>
    <%= link_to "Editar", edit_post_path(post) , class: 'btn btn-secondary' %>
    <%= link_to "Apagar", post, method: :delete, class: 'btn btn-danger' %>
  </div>
</div>
